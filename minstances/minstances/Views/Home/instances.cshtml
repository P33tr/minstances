@model InstancesVm
@{
}
<span><h2>Instances</h2>
@Html.ActionLink("Refresh", "Instances", "Home", new { }, new { @class = "btn btn-primary" })
</span>
<table class="styled-table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Users</th>
        <th>Active Users</th>
        <th>Up</th>
        <th>Admin</th>
        <th>Email</th>
    </tr>
    </thead>


    @foreach (var instance in Model.Instances.instances)
    {
        <tr>
            <td>@instance.name</td>
            <td>@instance.users</td>
            <td>@instance.active_users</td>
            <td>@instance.up</td>
            <td>@instance.admin</td>
            <td>@instance.email</td>
            <td><a asp-controller="Home", asp-action="Posts", asp-route-instance="@instance.name">Posts</a>
            </td>
        </tr>
    }

</table>